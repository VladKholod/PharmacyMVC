<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<section id="container">
    <header>
        <a href="#" class="logo">Pharmacy<span>MVC</span></a>
    </header>

    <aside>
        <div id="sidebar" class="nav-collapse ">
            <div class="text-center text-danger" style="margin: 20px 0 -60px">
                Pharmacy MVC
            </div>
            <!-- sidebar menu start-->
            <ul class="sidebar-menu">
                <li class="active">
                    <a class="" href="@Url.Action("Index", "Home")">
                        <span>Home</span>
                    </a>
                </li>
                <li class="active">
                    <a class="" href="@Url.Action("Index", "Pharmacy")">
                        <span>Pharmacies</span>
                    </a>
                </li>
                <li class="active">
                    <a class="" href="@Url.Action("Index", "Medicament")">
                        <span>Medicaments</span>
                    </a>
                </li>
                <li class="active">
                    <a class="" href="@Url.Action("Index", "Storage")">
                        <span>Storages</span>
                    </a>
                </li>
                <li class="active">
                    <a class="" href="@Url.Action("Index", "Order")">
                        <span>Orders</span>
                    </a>
                </li>
                <li class="active">
                    <a class="" href="@Url.Action("Index", "OrderDetails")">
                        <span>OrderDetails</span>
                    </a>
                </li>
                <li class="active">
                    <a class="" href="@Url.Action("Index", "MedicamentPriceHistory")">
                        <span>MedicamentPriceHistory</span>
                    </a>
                </li>
            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
</section>

<section id="main-content">
    <section class="wrapper">
        <div class="container">
            @RenderBody()
            <hr/>
        </div>
    </section>
    
    <footer class="footer navbar-right" style="position: absolute; right: 0; bottom: 0;">
        <p class="text-danger">&copy; @DateTime.Now.Year - Pharmace ASP.Net MVC</p>
    </footer>

</section>




@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</body>
</html>

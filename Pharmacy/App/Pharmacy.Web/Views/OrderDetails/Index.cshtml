@model IEnumerable<Pharmacy.Web.Core.Models.OrderDetailses.OrderDetailsViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OrderDetails</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedicamentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicamentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { orderId = item.OrderId, medicamentId = item.MedicamentId }, new { @class = " btn btn-default" })
                @Html.ActionLink("Details", "Details", new { orderId = item.OrderId, medicamentId = item.MedicamentId }, new { @class = " btn btn-default" })
                @Ajax.ActionLink("Delete", "Delete", new { orderId = item.OrderId, medicamentId = item.MedicamentId }, new AjaxOptions() { HttpMethod = "GET" }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

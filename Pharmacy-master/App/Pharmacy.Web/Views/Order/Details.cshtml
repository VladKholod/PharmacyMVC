@model Pharmacy.Web.Core.Models.OrderViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>OrderViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PharmacyNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PharmacyNumber)
        </dd>
    </dl>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailses.First().Medicament.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailses.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetailses.First().Price)
            </th>
        </tr>

        @foreach (var item in Model.OrderDetailses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicament.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
        }
    </table>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>